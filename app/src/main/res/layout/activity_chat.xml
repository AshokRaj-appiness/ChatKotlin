<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        tools:context=".ChatActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_messages"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/send_layout"></androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
                android:id="@+id/send_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_send_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    app:fabSize="mini"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_collections_black_24dp"
            />
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_Message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/fab_send_image"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:elevation="2dp"
                    android:hint="Enter your message"
                    android:background="@drawable/rect_oval_white"/>
            <ImageView
                    android:id="@+id/imageViewSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:src="@drawable/ic_send_black_24dp"

            />
        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>